{% extends 'SonataAdminBundle:CRUD:show.html.twig' %}


{% block show %}
 {{ parent() }}
<div class="status">
</div>
<div class="row-fluid">
    <div class="span6">
        <ul id="associeted" class="connectedSortable" data-url="{{ admin.generateUrl('addServer',{'id': object.id}) }}">
        {% if associated %}
        {% for server in associated %}
        <li data-id="{{server.id}}"> {{ server.name }}</li>
        {% endfor %}
        {% endif%}
        </ul>
    </div>
    <div class="span6">
        <ul id="unassocieted"class="connectedSortable" data-url="{{ admin.generateUrl('removeServer',{'id': object.id})}}" >
        {% if unassociated %}
           {% for server in unassociated %}
            <li data-id="{{server.id}}"> {{ server.name }}</li>
            {% endfor %}
        {% endif%}
         </ul>
    </div>
</div>
        
{% endblock %}
{% block javascripts %}
 {{ parent() }}
<script type="text/javascript" src="/bundles/obladyzuul/js/zuul.js"></script>
{% endblock %}

 {% block stylesheets %}
{{ parent() }}
 <link rel="stylesheet" href="/bundles/obladyzuul/css/zuul.css" type="text/css" media="all"  />
{% endblock %}